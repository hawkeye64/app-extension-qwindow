@import './window-variables'

:fullscreen
  overflow hidden !important

:-ms-fullscreen
  overflow hidden !important

:-webkit-full-screen
  overflow hidden !important

:-moz-full-screen
  overflow hidden !important

body
  overscroll-behavior-y: contain

.q-window
  color currentColor

  &__dragging
    box-shadow none

  &__floating
    box-shadow 1px 1px 7px 1px rgba(0,0,0,.2)

  &__fullscreen
    position fixed !important
    top 0 !important
    left 0 !important
    width 100vw !important
    height 100vh !important

  &__titlebar
    top 0
    left 0
    flex none
    display flex
    flex-wrap: nowrap;
    overflow hidden
    padding 2px 0 2px 8px
    width 100%
    box-sizing border-box
    white-space nowrap
    border-radius 0

    &--divider
      border-width 0 0 1px
      border-style solid

    &--dense
      min-height 16px!important
      font-size: .8rem!important

    &--title
      display flex
      flex-wrap nowrap
      flex 1
      justify-content left
      font-size 1rem

    &--actions
      color currentColor

    &--action-item
      padding 2px 4px

  &__body
    width 100%
    overflow hidden

  &__selected
    border-color rgba(0,0,0,.2)
    box-shadow 1px 1px 7px 1px rgba(0,0,0,.2)

  &__resize
    &-handle
      position absolute
      background-color transparent
      border-color transparent
      font-size 0
      line-height 6px
      opacity 0
      zoom 1

      &--top
        top -3px
        left 0
        width 100%
        height 6px
        &:hover
          cursor n-resize
        &-left
          top -3px
          left -3px
          width 6px
          height 6px
          &:hover
            cursor nw-resize
        &-right
          top -3px
          right -3px
          width 6px
          height 6px
          &:hover
            cursor ne-resize
      &--right
        top 0
        right -3px
        width 6px
        height 100%
        &:hover
          cursor e-resize
      &--bottom
        bottom -3px
        left 0
        width 100%
        height 6px
        &:hover
          cursor s-resize
        &-left
          bottom -3px
          left -3px
          width 6px
          height 6px
          &:hover
            cursor sw-resize
        &-right
          bottom -3px
          right -3px
          width 6px
          height 6px
          &:hover
            cursor se-resize
      &--left
          top 0
          left -3px
          width 6px
          height 100%
          &:hover
            cursor w-resize
      &--titlebar
        top 0
        left 0
        width 100%
        height 100%
        &:hover
          cursor move

.gripper
  position absolute
  width $gripper-size
  height $gripper-size
  background-color #ffffff
  border 1px solid #000000
  &:hover
    background-color #000000!important
  &-round
    border-radius 50%
  &-top
    top -($gripper-size)
    left 50%
    margin-left -($gripper-size)
    &:hover
      cursor n-resize
    &-left
      top -($gripper-size)
      left -($gripper-size)
      &:hover
        cursor nw-resize
    &-right
      top -($gripper-size)
      right -($gripper-size)
      &:hover
        cursor ne-resize
  &-left
    left -($gripper-size)
    top 50%
    margin-top -($gripper-size)
    &:hover
      cursor w-resize
  &-right
    right -($gripper-size)
    top 50%
    margin-top -($gripper-size)
    &:hover
      cursor e-resize
  &-bottom
    bottom -($gripper-size)
    left 50%
    margin-left -($gripper-size)
    &:hover
      cursor s-resize
    &-left
      bottom -($gripper-size)
      left -($gripper-size)
      &:hover
        cursor sw-resize
    &-right
      bottom -($gripper-size)
      right -($gripper-size)
      &:hover
        cursor se-resize
